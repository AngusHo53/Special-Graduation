<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rabbit.login.SelectAccountType"
    tools:showIn="@layout/activity_select_account_type">

    <Button
        android:id="@+id/BT_commonUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BT_commonUser"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135sp"
        android:background="#9955FF"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/BT_seminarOrganizers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BT_seminarOrganizers"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_below="@id/BT_commonUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="#9955FF"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
